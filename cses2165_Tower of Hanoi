#include<bits/stdc++.h>

using namespace std;

void solve(int n, int a, int b, int c){
    if(n==1){
        cout<<a<<" "<<b<<endl;
        return;
    }
    solve(n-1,a,c,b);
    cout<<a<<" "<<b<<endl;
    solve(n-1,c,b,a);
}

int main(){
    int n, a=1, b=3, c=2;
    cin>>n;
    cout<<(pow(2,n)-1)<<endl;
    solve(n,a,b,c);
}
